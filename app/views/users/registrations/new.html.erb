<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'ui form segment'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  	<%= f.label :email %>
  	<div class="ui left labeled icon input">
	  	<%= f.email_field :email, :autofocus => true %>
	  	<i class="user icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
      </div>
    </div>
  </div>

  <div class="field">
  	<%= f.label :password %>
  	<div class="ui left labeled icon input">
	  	<%= f.password_field :password %>
	  	<i class="lock icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
      </div>
	  </div>
  </div>

  <div class="field">
  	<%= f.label :password_confirmation %>
  	<div class="ui left labeled icon input">
		  <%= f.password_field :password_confirmation %>
	  	<i class="lock icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
      </div>
	  </div>
	</div>

  <div class="ui blue submit button">
  	<%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
